@page
@model LoginModel

@{
    ViewData["Title"] = "Fazer login";
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        <img class="img-responsive" src="~/images/falzogamerlogofull.png" />
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <div asp-validation-summary="All" class="alert-danger"></div>
        <p class="login-box-msg">Faça login para iniciar</p>
        <form method="post">
            <div class="form-group has-feedback">
                <input asp-for="Input.Login" class="form-control" placeholder="Login ou Email" autofocus>
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Input.Login" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Input.Password" class="form-control" placeholder="Senha">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-danger btn-block btn-flat">Entrar</button>
                </div>
            </div>
        </form>

        <br />
        @*<div class="social-auth-links text-center">
